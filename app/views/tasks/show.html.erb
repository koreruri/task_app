<% provide(:heading, "スケジュール詳細")%>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @task.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @task.start_date.to_s(:date_jp) %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @task.end_date.to_s(:date_jp) %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td>
      <% if @task.all_day %>
        ○
      <% end %>
    </td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><pre><%= @task.memo %></pre></td>
  </tr>
</table>

<ul>
  <li><%= link_to "スケジュール一覧に戻る", :tasks %></li>
  <li><%= link_to "スケジュールを編集する", [:edit, @task] %></li>
  <li><%= link_to "スケジュールを削除", @task, method: :delete, data: { confirm: "本当に削除しますか？" } %></li>
</ul>
